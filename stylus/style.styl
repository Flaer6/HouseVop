title-font = 'Playfair Display', serif
title-color = #D4C17F

*
*::before
*::after
  box-sizing border-box

@font-face
  font-family PostNoBillsJaffna-Bold
  font-weight 600
  font-style normal
  src url('../fonts/PostNoBillsJaffna-Bold.ttf') format('truetype')

body
  font-family 'Raleway', sans-serif
  font-size 14px
  line-height 16px
  color #fff
  background-color #242B33
  padding 0
  margin 0

a
  text-decoration none
  color inherit

li
  list-style none

.container
  max-width 1120px
  padding 0 10px
  margin 0 auto

.header
  position absolute
  left 0
  right 0

.menu
  display flex
  justify-content space-between

.logo__title
  font-family 'PostNoBillsJaffna-Bold'
  font-weight 600
  font-size 36px

.logo__subtitle
  font-size 12px
  text-transform uppercase

.menu__list 
  display flex
  justify-content space-between
  align-items center
  gap 0 40px

.menu__item
  letter-spacing 5%

.promo
  background-image url('../images/bg.jpg')
  background-position center
  background-size cover
  background-repeat no-repeat

.promo__inner
  min-height 100vh
  position relative
  display flex
  flex-direction column
  justify-content center
  align-items center
  
.promo__box
  text-align center
  max-width 556px
  padding 200px 0

.promo__title
  font-family title-font
  font-size 48px
  line-height 64px
  color title-color
  margin-bottom 100px

.promo__conacts
  display flex
  justify-content space-between
  align-items center
  text-align center
  gap 0 100px
  font-size 18px

.promo__conacts img
  margin-right 18px







